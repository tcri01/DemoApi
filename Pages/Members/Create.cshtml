@page
@model DemoApi.Pages.Members.CreateModel

@{
    ViewData["Title"] = "聯絡我們";
}

<div class="container py-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4">
                <h2 class="fw-bold mb-4 text-primary">聯絡我們</h2>
                <p class="text-muted mb-4">如果您對我們的產品有任何問題或建議，請填寫下表，我們將有專人與您聯繫。</p>

                 <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <partial name="_MemberForm" for="Member" />

                    <div class="mt-4 pt-4 border-top text-end">
                        <button type="submit" class="btn btn-primary btn-lg px-5">寄出訊息</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
