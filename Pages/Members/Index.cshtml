@page
@model DemoApi.Pages.Members.IndexModel

@{
    ViewData["Title"] = "會員管理中心";
}

<div class="container py-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">會員管理中心</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> 新增會員
        </a>
    </div>

    <div class="card overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="px-4 py-3">姓名</th>
                        <th class="py-3">Email</th>
                        <th class="py-3">電話</th>
                        <th class="py-3">加入時間</th>
                        <th class="px-4 py-3 text-end">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Member.Any())
                    {
                        @foreach (var item in Model.Member)
                        {
                            <tr>
                                <td class="px-4 py-3 align-middle">
                                    <div class="fw-bold text-primary">@item.Name</div>
                                </td>
                                <td class="py-3 align-middle text-muted">@item.Email</td>
                                <td class="py-3 align-middle">@item.Phone</td>
                                <td class="py-3 align-middle text-muted">@item.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd")</td>
                                <td class="px-4 py-3 align-middle text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">編輯</a>
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">詳細</a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">刪除</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="py-5 text-center text-muted">
                                目前沒有會員資料
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
