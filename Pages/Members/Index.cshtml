@page
@model DemoApi.Pages.Members.IndexModel

@{
    ViewData["Title"] = "聯絡訊息管理";
}

<div class="container py-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">聯絡訊息列表</h1>
    </div>

    <div class="card overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="px-4 py-3">公司/聯絡人</th>
                        <th class="py-3">Email/電話</th>
                        <th class="py-3">內容摘要</th>
                        <th class="py-3">日期</th>
                        <th class="px-4 py-3 text-end">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Member.Any())
                    {
                        @foreach (var item in Model.Member)
                        {
                            <tr>
                                <td class="px-4 py-3 align-middle">
                                    <div class="fw-bold text-primary">@item.Company</div>
                                    <div class="small text-muted">@item.Name</div>
                                </td>
                                <td class="py-3 align-middle">
                                    <div class="small">@item.Email</div>
                                    <div class="small text-muted">@item.Phone / @item.Mobile</div>
                                </td>
                                <td class="py-3 align-middle">
                                    <div class="text-truncate" style="max-width: 200px;">@item.Content</div>
                                </td>
                                <td class="py-3 align-middle text-muted small">@item.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</td>
                                <td class="px-4 py-3 align-middle text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">查看詳情</a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">刪除</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="py-5 text-center text-muted">
                                目前沒有聯絡訊息
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
