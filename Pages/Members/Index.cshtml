@page
@model DemoApi.Pages.Members.IndexModel

@{
    ViewData["Title"] = "聯絡訊息管理";
}

<div class="container py-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">聯絡訊息列表</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createMemberModal">
            <i class="bi bi-plus-lg"></i> 新增訊息
        </button>
    </div>

    <div class="card overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="px-4 py-3">item_id</th>
                        <th class="py-3">公司/聯絡人</th>
                        <th class="py-3">Email/電話</th>
                        <th class="py-3">內容摘要</th>
                        <th class="py-3">日期</th>
                        <th class="px-4 py-3 text-end">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Members.Any())
                    {
                        @foreach (var item in Model.Members)
                        {
                            <tr>
                                <td class="px-4 py-3 align-middle fw-bold text-muted">@item.item_id</td>
                                <td class="py-3 align-middle">
                                    <div class="fw-bold text-primary">@item.Company</div>
                                    <div class="small text-muted">@item.Name</div>
                                </td>
                                <td class="py-3 align-middle">
                                    <div class="small">@item.Email</div>
                                    <div class="small text-muted">@item.Phone / @item.Mobile</div>
                                </td>
                                <td class="py-3 align-middle">
                                    <div class="text-truncate" style="max-width: 200px;">@item.Content</div>
                                </td>
                                <td class="py-3 align-middle text-muted small">@item.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</td>
                                <td class="px-4 py-3 align-middle text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">查看詳情</a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">刪除</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="py-5 text-center text-muted">
                                目前沒有聯絡訊息
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

<!-- Create Member Modal -->
<div class="modal fade" id="createMemberModal" tabindex="-1" aria-labelledby="createMemberModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="createMemberModalLabel">新增聯絡訊息</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createMemberForm" method="post" asp-page="/Members/Create">
                <div class="modal-body">
                    <partial name="_MemberForm" for="Member" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary px-4">儲存訊息</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    </div>
</div>
