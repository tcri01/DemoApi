@page
@model DemoApi.Pages.Members.EditModel

@{
    ViewData["Title"] = "編輯聯絡訊息";
}

<div class="container py-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4">
                <h2 class="fw-bold mb-4">編輯聯絡訊息</h2>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Member.Id" />
                    <input type="hidden" asp-for="Member.CreatedAt" />
                    
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Member.Company" class="form-label">公司名稱</label>
                            <input asp-for="Member.Company" id="companyName" class="form-control" />
                            <span asp-validation-for="Member.Company" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Member.Name" class="form-label">聯絡人姓名</label>
                            <input asp-for="Member.Name" id="contactName" class="form-control" />
                            <span asp-validation-for="Member.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Member.Email" class="form-label">E-mail</label>
                            <input asp-for="Member.Email" class="form-control" />
                            <span asp-validation-for="Member.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Member.Phone" class="form-label">電話</label>
                            <input asp-for="Member.Phone" class="form-control" />
                            <span asp-validation-for="Member.Phone" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Member.Mobile" class="form-label">行動電話</label>
                            <input asp-for="Member.Mobile" class="form-control" />
                            <span asp-validation-for="Member.Mobile" class="text-danger"></span>
                        </div>
                        
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <label asp-for="Member.Content" class="form-label">問題或建議</label>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="completeContent()">
                                        <i class="bi bi-magic"></i> AI 補全
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="suggestContent()">
                                        <i class="bi bi-lightbulb"></i> AI 建議
                                    </button>
                                </div>
                            </div>
                            <textarea asp-for="Member.Content" id="messageContent" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Member.Content" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4 pt-4 border-top">
                        <button type="submit" class="btn btn-primary">更新資料</button>
                        <a asp-page="Index" class="btn btn-link text-muted">返回列表</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function suggestContent() {
            const name = document.getElementById('contactName').value;
            const company = document.getElementById('companyName').value;
            const btn = event.currentTarget;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

            try {
                const response = await fetch(`?handler=SuggestContent&name=${encodeURIComponent(name)}&company=${encodeURIComponent(company)}`);
                const data = await response.json();
                if (data.success) {
                    document.getElementById('messageContent').value = data.suggestion;
                }
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-lightbulb"></i> AI 建議';
            }
        }

        async function completeContent() {
            const currentText = document.getElementById('messageContent').value;
            const btn = event.currentTarget;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

            try {
                const response = await fetch(`?handler=CompleteContent&currentText=${encodeURIComponent(currentText)}`);
                const data = await response.json();
                if (data.success) {
                    document.getElementById('messageContent').value = data.completed;
                }
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-magic"></i> AI 補全';
            }
        }
    </script>
}
