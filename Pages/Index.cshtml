@page
@model IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="hero-section fade-in">
    <div class="container text-start">
        <h1 class="hero-title">@Localizer["HeroTitle"]<span>@Localizer["HeroTitleSpan"]</span></h1>
        <p class="lead text-muted mb-5 col-lg-6">
            @Localizer["HeroDescription"]
        </p>
        <div class="d-flex gap-3">
            <a asp-page="/Members/Create" class="btn btn-primary btn-lg px-5">@Localizer["ContactUs"]</a>
            <!-- <a href="#features" class="btn btn-outline-dark btn-lg px-5">技術概覽</a> -->
        </div>
    </div>
</div>

